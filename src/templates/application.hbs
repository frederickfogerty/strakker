{{#view Strakker.NavView}}
    <nav class="top-bar" data-topbar>
        <ul class="title-area">
            <li class="name">
                <h1>{{#link-to 'dashboard'}}Strakker - {{currentPath}}{{/link-to}}</h1>
            </li>
            <li class="toggle-topbar menu-icon"><a href=""><span>Menu</span></a></li>
        </ul>
        <section class="top-bar-section">
            <ul class="right">
                {{#each link in view.links}}
                    {{#link-to link.url tagName="li" href=false}}
                        <a {{bind-attr href="view.href"}}>{{link.name}}</a>
                    {{/link-to}}
                {{/each}}
                
                {{#if session.isAuthenticated}}
                    <li {{action 'invalidateSession'}}><a>Logout</a></li>
                {{else}}
                    {{#link-to "auth.login" tagName="li" href=false}}<a {{bind-attr href="view.href"}}>Login</a>{{/link-to}}
                {{/if}}
            </ul>
        </section>
    </nav>
{{/view}}
{{outlet}}
